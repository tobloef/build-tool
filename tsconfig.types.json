{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "outDir": "types",
    "target": "ESNext",
    "module": "NodeNext"
  },
  "exclude": [
    "node_modules",
    "**/*.d.ts",
    "**/*.test.js"
  ],
  "include": [
    "src/**/*.js"
  ]
}
